@model ContosoUniversity.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<style>
    .color {
        font-size: 17px;
    }

        .color:hover {
            transition: 0.2s all linear;
            border-bottom: 3px solid black;
            padding: 10px;
            color: black;
            text-decoration: none;
        }

    .color {
        transition: 0.2s all linear;
        border-bottom: 3px solid rgb(54 174 119);
        text-decoration: none;
        color: rgb(54 174 119);
        border-radius: 30px;
        padding: 5px;
    }

    .blackBlock:hover {
        color: aliceblue;
        transition: 0.2s all linear;
        background: rgb(54 174 119);
        color: white;
    }

    .blackBlock {
        padding: 10px;
        text-decoration: none;
        color: black;
        transition: 0.2s all linear;
        margin-bottom: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 30px;
    }

    h2 {
        text-align: center;
        padding: 20px;
        font-size: 30px;
        background: rgb(54 174 119);
        width: auto;
        margin-top: 0;
        margin: 0 auto;
        margin-bottom: 20px;
        border-radius: 20px;
        color: white;
    }

    .btn {
        text-align: center;
        padding: 10px;
        font-size: 15px;
        background: black;
        color: white;
        transition: 0.2s all linear;
        border: none;
    }

    .form-group {
        transition: 0.2s all linear;
    }

    .row {
        margin: 0 100px;
    }
</style>

<h2>Изменение - Книги</h2>
<hr />
<div class="row blackBlock">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookID" />
            <div class="form-group">
                <label asp-for="AuthorID" class="control-label"></label>
                <select asp-for="AuthorID" class="form-control" asp-items="ViewBag.AuthorID"></select>
                <span asp-validation-for="AuthorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SectionID" class="control-label"></label>
                @Html.DropDownList("SectionID", null, "Без Раздела", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SectionID)
            </div>
            <div class="form-group">
                <label asp-for="PublisherID" class="control-label"></label>
                @Html.DropDownList("PublisherID", null, "Без Издательства", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PublisherID)
            </div>
            <div class="form-group">
                <label asp-for="BookName" class="control-label"></label>
                <input asp-for="BookName" class="form-control" />
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearOfPublishing" class="control-label"></label>
                <input asp-for="YearOfPublishing" class="form-control" />
                <span asp-validation-for="YearOfPublishing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="color" asp-action="Index">Вернуться к полному списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
