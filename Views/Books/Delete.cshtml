@model ContosoUniversity.Models.Book

@{
    ViewData["Title"] = "Delete";
}


<style>
    .color {
        font-size: 17px;
    }

        .color:hover {
            transition: 0.2s all linear;
            border-bottom: 3px solid black;
            padding: 10px;
            color: black;
            text-decoration: none;
        }

    .color {
        transition: 0.2s all linear;
        border-bottom: 3px solid rgb(54 174 119);
        text-decoration: none;
        color: rgb(54 174 119);
        border-radius: 30px;
        padding: 5px;

    }

    .blackBlock:hover {
        color: aliceblue;
        transition: 0.2s all linear;
        background: rgb(54 174 119);
        color: white;
    }

    .blackBlock {
        padding: 10px;
        text-decoration: none;
        color: black;
        transition: 0.2s all linear;
        margin-bottom: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 30px;
    }

    h2 {
        text-align: center;
        padding: 20px;
        font-size: 30px;
        background: rgb(54 174 119);
        width: auto;
        margin-top: 0;
        margin: 0 auto;
        margin-bottom: 20px;
        border-radius: 20px;
        color: white;
    }

    .btn {
        text-align: center;
        padding: 10px;
        font-size: 15px;
        background: black;
        color: white;
        transition: 0.2s all linear;
        border: none;
    }

    .form-group {
        transition: 0.2s all linear;
    }

    .row {
        margin: 0 100px;
    }
</style>

<h2>Удаление - Книги</h2>

<h3>Вы уверены, что хотите удалить Книгу?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Section)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Section.SectionName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Publisher)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Publisher.PublisherName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.BookName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BookName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.YearOfPublishing)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.YearOfPublishing)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BookID" />
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        <a class="form-action no-color color" asp-action="Index">Вернуться к полному списку</a>
    </form>
</div>
